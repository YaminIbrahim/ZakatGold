<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityResult"
    android:orientation="vertical"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Keep Gold-->
        <TextView
            android:id="@+id/tvCalcKeep"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="240dp"
            android:layout_marginRight="240dp"
            android:layout_marginTop="5dp"
            android:text="Keep Gold"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCalcGram"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="42dp"
            android:padding="11dp"
            android:gravity="left"
            android:text="Gram                      :"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:background="@drawable/round_textview" />

        <TextView
            android:id="@+id/tvCalcCurrent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="102dp"
            android:padding="11dp"
            android:gravity="left"
            android:text="Current Gold         :"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:background="@drawable/round_textview" />

        <TextView
            android:id="@+id/tvCalcUruf"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="162dp"
            android:padding="11dp"
            android:gravity="left"
            android:text="Uruf                        :"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:background="@drawable/round_textview" />

        <TextView
            android:id="@+id/tvCalcPay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="222dp"
            android:padding="11dp"
            android:gravity="left"
            android:text="Zakat Payable      :"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:background="@drawable/round_textview" />

        <TextView
            android:id="@+id/tvTotalKeep"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="282dp"
            android:padding="11dp"
            android:gravity="left"
            android:text="Total Keep Zakat :"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:background="@drawable/round_textview"
            android:backgroundTint="#00B2FF"/>

        <!--Wear Gold-->
        <TextView
            android:id="@+id/tvCalcWear"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="362dp"
            android:text="Wearable Gold"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvWearGram"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="402dp"
            android:padding="11dp"
            android:gravity="left"
            android:text="Gram                      :"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:background="@drawable/round_textview" />

        <TextView
            android:id="@+id/tvWearCurrent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="462dp"
            android:padding="11dp"
            android:gravity="left"
            android:text="Current Gold         :"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:background="@drawable/round_textview" />

        <TextView
            android:id="@+id/tvWearUruf"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="522dp"
            android:padding="11dp"
            android:gravity="left"
            android:text="Uruf                        :"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:background="@drawable/round_textview" />

        <TextView
            android:id="@+id/tvWearPay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="582dp"
            android:padding="11dp"
            android:gravity="left"
            android:text="Zakat Payable      :"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:background="@drawable/round_textview" />

        <TextView
            android:id="@+id/tvTotalWear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="642dp"
            android:background="@drawable/round_textview"
            android:backgroundTint="#00B2FF"
            android:gravity="left"
            android:padding="11dp"
            android:text="Total Wear Zakat :"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <!--total-->
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="722dp"
            android:background="@drawable/round_textview"
            android:backgroundTint="#78FF78"
            android:gravity="left"
            android:padding="11dp"
            android:text="Total Zakat           :"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp" />

        <!--home button-->
        <Button
            android:id="@+id/btnHome"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="802dp"
            android:layout_marginLeft="11dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/round_btn"
            android:text="Home"
             />

    </RelativeLayout>
</ScrollView>